{% comment %}
  Renders a heading

  Accepts:
  - heading_size: {String} "h2", "h4", "h5", "h6"
  - heading: {String}
  - class: {String}
  - heading_tag: {String}


  Usage:
  {% render 'heading', class: "split-section__text", heading_tag: block.settings.heading_tag, heading: block.settings.heading, heading_size: block.settings.heading_size %}
{% endcomment %}

{% if heading != blank %}
  <{{ heading_tag }}
    class="{% if class %}{{ class }}__heading{% endif %} {{ heading_size }} {% if alt_heading %}alt{% endif%}"
    {{ block.shopify_attributes }}
  >
    {{ heading | escape }}
  </{{ heading_tag }}>
{% endif %}
