{% style %}
  :root {
    --btnBorderRadius: {{ settings.button_border_radius }}px;
    --btnHeight: {{ settings.button_height }}px;
    --arrowBtnHeight: {{ settings.arrow_button_height }}px;
    --btnSidesSpace: {{ settings.button_sides_space }};
    --btnTextTransform: {% if settings.button_uppercase == true %}uppercase{% else %}none{% endif %};
    --btnSpacing: {{ settings.button_spacing | divided_by: 100.0 }}rem;

    --productPhraseTilt: {{ settings.product_phrase_tilt }}deg;
  }
{% endstyle %}