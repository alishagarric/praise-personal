{% comment %}
  Renders an overflow slider arrows

  Expects: 
    class: {String} optional

  Usage:
  <overflow-slider class="{% if hide_arrows_on_desktop %}__hide-desktop-arrows{% endif %} {% if hide_arrows_on_tablet %}__hide-tablet-arrows{% endif%}">
    <ul class="overflow-slider__container">
      <li>item</li>
    </ul>
    {% render 'overflow-slider-arrows' %}
  </overflow-slider>

{% endcomment %}

<button class="overflow-slider__arrow next {{ class }}">
  {% render 'svg-slider-arrow' %}
</button>
<button class="overflow-slider__arrow prev hide {{ class }}">
  {% render 'svg-slider-arrow' %}
</button>