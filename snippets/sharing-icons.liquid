{{ 'social-icons.css' | asset_url | stylesheet_tag }}

<ul class="social-icons">
    <li>
      <a class="social-icons__item" target="_blank" rel="noopener" href="//www.facebook.com/sharer.php?u={{ page.url }}">
        {% render 'icon-brand', icon: 'facebook' %}
        <span class="visually-hidden">{{ 'general.social.share' | t }} {{ 'general.social.links.facebook' | t }}</span>
      </a>
    </li>
    <li class="twitter">
      <a class="social-icons__item" target="_blank" rel="noopener" href="//twitter.com/share?text=Downhome%20at%20the%20Hoedown&amp;url={{ page.url }}">
        {% render 'icon-brand', icon: 'twitter' %}
        <span class="visually-hidden">{{ 'general.social.share' | t }} {{ 'general.social.links.twitter' | t }}</span>
      </a>
    </li>
    
    <li class="pinterest">
            <a class="social-icons__item" target="_blank" rel="noopener" href="//pinterest.com/pin/create/button/?url={{ page.url }}&amp;media={{ article.featured_image | img_url: '1024x' }}">
        {% render 'icon-brand', icon: 'pinterest' %}
        <span class="visually-hidden">{{ 'general.social.share' | t }} {{ 'general.social.links.pinterest' | t }}</span>
      </a>
    </li>
    
  </ul>