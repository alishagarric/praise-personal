{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}"
          }
        },
        "title": {
          "type": "title",
          "settings": {
            "heading_size": "h4",
            "alt_heading": true
          }
        },
        "description": {
          "type": "description",
          "settings": {}
        },
        "rating": {
          "type": "rating",
          "settings": {}
        },
        "media": {
          "type": "media",
          "settings": {}
        },
        "caption": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}"
          }
        },
        "price": {
          "type": "price",
          "settings": {}
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {}
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {}
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {}
        },
        "pickup-availability": {
          "type": "pickup_availability",
          "settings": {}
        },
        "expandable": {
          "type": "expandable",
          "settings": {
            "title": "Details",
            "text": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Gravida diam integer suspendisse magna tempus ut praesent amet venenatis. </p><ul><li>Full of Gluten</li><li>Vegan</li><li>500 calories per cookie</li><li>No artificial colors of flavors</li></ul>",
            "open": false
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "description",
        "rating",
        "expandable",
        "media",
        "caption",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "pickup-availability"
      ],
      "settings": {
        "theme": "primary"
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like"
      }
    }
  },
  "order": ["main", "product-recommendations"]
}
