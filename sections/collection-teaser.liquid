{% style %}
  #Collection-teaser-{{ section.id }} {
    --topSpacingRatio: {{ section.settings.top_spacing }} / 100;
    --bottomSpacingRatio: {{ section.settings.bottom_spacing }} / 100;
  }
{% endstyle %}

<div id="Collection-teaser-{{ section.id }}" class="collection-teaser __theme-{{ section.settings.theme }}">
