{% style %}
  #Main-collection-grid-{{ section.id }} {
    --topSpacingRatio: {{ section.settings.top_spacing }} / 100;
    --bottomSpacingRatio: {{ section.settings.bottom_spacing }} / 100;
  }
{% endstyle %}

{% render 'filter-and-sort', results: collection %}

{%- paginate collection.products by 12 -%}
  <div id="Main-collection-grid-{{ section.id }}" class="main-collection-grid __theme-{{ section_theme }}">
    {% comment %} No products found in general or with current filters applied {% endcomment %}
    {%- if collection.products.size == 0 -%}
      <p class="__article-text __align-center">
        {{ 'products.facets.use_fewer_filters_html' | t: link: collection.url }}
      </p>

      {% comment %} Product grid {% endcomment %}
    {%- else -%}
      <ul class="main-collection-grid__container list-unstyled" role="list">
        {%- for product in collection.products -%}
          <li style="order: {{ forloop.index }}">
            {% render 'product-card' product: product, class: "main-collection-grid__item", show_bg_color: section.settings.show_bg_color, quick_add: section.settings.quick_add, crop: section.settings.crop_shape, show_phrase: section.settings.show_phrase, alignment: section.settings.product_text_alignment, section.settings.show_description: section.settings.show_description, price_position: section.settings.price, alt_heading: section.settings.alt_title %}
          </li>
        {%- endfor -%}

        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'promotion' %}
              <li
                style="order: {{ block.settings.position | minus: 1 }}; --overlayOpacity: {{ block.settings.overlay }}%;"
                class="__theme-{{ block.settings.overlay_theme }}"
              >
                <div class="main-collection-grid__block __crop-{{ block.settings.image_corners }}">
                  {% render 'heading',
                    class: 'main-collection-grid__block',
                    heading_size: block.settings.blocks_size,
                    alt_heading: block.settings.alt_heading
                  %}
                  {{ block.settings.text }}

                  {% if block.settings.image %}
                    {% render 'next-gen-img', image: block.settings.image %}
                  {% endif %}
                </div>
              </li>
          {% endcase %}
        {% endfor %}
      </ul>
    {% endif %}

    {% comment %} Pagination {% endcomment %}
    {% render 'pagination', paginate: paginate %}
  </div>
{%- endpaginate -%}

