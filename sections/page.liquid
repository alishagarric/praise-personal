{% style %}
  #Page-output-{{ section.id }} {
    --topSpacingRatio: {{ section.settings.top_spacing }} / 100;
    --bottomSpacingRatio: {{ section.settings.bottom_spacing }} / 100;
  }
{% endstyle %}

{% assign default_title = 'sections.page.title' | t %}
{% assign page_title = section.settings.page.title | default: default_title %}

<div id="Page-output-{{ section.id }}" class="page-output __theme-{{ section.settings.theme }}">
  {% render 'heading', heading: page_title, heading_size: section.settings.heading_size, alt_heading: section.settings.alt_heading %}

  <div class="__article-txt-{{ section.settings.text_size }}">
    {%- if section.settings.page != blank -%}
      {{ section.settings.page.content }}
    {%- else -%}
      <div class="page-output__image image-container" style="padding-top: 50%;">
        {{ 'page' | placeholder_svg_tag: 'page-placeholder' }}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.page.settings.header.content"
    },
    {
      "type": "page",
      "id": "page",
      "label": "t:sections.page.settings.page.label"
    },
    {
      "type": "header",
      "content": "t:sections.page.settings.header_1.content"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.page.settings.heading_size.options.label_1"
        },
        {
          "value": "h4",
          "label": "t:sections.page.settings.heading_size.options.label_2"
        },
        {
          "value": "h5",
          "label": "t:sections.page.settings.heading_size.options.label_3"
        },
        {
          "value": "h6",
          "label": "t:sections.page.settings.heading_size.options.label_4"
        }
      ],
      "default": "h2",
      "label": "t:sections.page.settings.heading_size.label"
    },
    {
      "type": "checkbox",
      "id": "alt_heading",
      "label": "t:sections.page.settings.alt_heading.label"
    },
    {
      "type": "select",
      "id": "text_size",
      "options": [
        {
          "value": "p-sm",
          "label": "t:sections.page.settings.description_text_size.options.label_1"
        },
        {
          "value": "p",
          "label": "t:sections.page.settings.description_text_size.options.label_2"
        },
        {
          "value": "p-lg",
          "label": "t:sections.page.settings.description_text_size.options.label_3"
        }
      ],
      "default": "p-sm",
      "label": "t:sections.page.settings.description_text_size.label"
    },
    {
      "type": "header",
      "content": "t:sections.page.settings.header_2.content"
    },
    {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "t:sections.page.settings.top_spacing.label",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "t:sections.page.settings.bottom_spacing.label",
      "default": 50
    },
    {
      "type": "select",
      "id": "theme",
      "options": [
        {
          "value": "primary",
          "label": "t:sections.page.settings.theme.options.label_1"
        },
        {
          "value": "2",
          "label": "t:sections.page.settings.theme.options.label_2"
        },
        {
          "value": "3",
          "label": "t:sections.page.settings.theme.options.label_3"
        },
        {
          "value": "4",
          "label": "t:sections.page.settings.theme.options.label_4"
        },
        {
          "value": "5",
          "label": "t:sections.page.settings.theme.options.label_5"
        }
      ],
      "default": "primary",
      "label": "t:sections.page.settings.theme.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.page.presets.name"
    }
  ]
}
{% endschema %}
