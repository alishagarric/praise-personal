      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "Logo Max Width",
      "default": 80
    },
    {
      "type": "checkbox",
      "id": "stack_logo",
      "default": false,
      "label": "Stack logo above text content?"
    },
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "header",
      "content": "Social Media Icons",
      "info": "To display your social media accounts, link them in your theme settings."
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": false,
      "label": "Show social icons?"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "Show newsletter form?"
    },
    {
      "type": "link_list",
      "info": "Displays only top-level menu items.",
      "id": "secondary_links",
      "label": "Secondary Links"
    },
    {
      "type": "header",
      "content": "Footer Theme"
    },
    {
      "type": "select",
