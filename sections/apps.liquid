{% style %}
  #Apps-{{ section.id }} {
    --topSpacingRatio: {{section.settings.top_spacing}} / 100;
    --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
  }
{% endstyle %}

<div id="Apps-{{ section.id }}" class="__theme-{{ section.settings.theme }}">
  {% for block in section.blocks %}
    {% render block %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "t:sections.apps.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "t:sections.apps.settings.top_spacing.label",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "t:sections.apps.settings.bottom_spacing.label",
      "default": 50
    },
    {
      "type": "select",
      "id": "theme",
      "options": [
        {
          "value": "primary",
          "label": "t:sections.apps.settings.theme.options.label_1"
        },
        {
          "value": "2",
          "label": "t:sections.apps.settings.theme.options.label_2"
        },
        {
          "value": "3",
          "label": "t:sections.apps.settings.theme.options.label_3"
        },
        {
          "value": "4",
          "label": "t:sections.apps.settings.theme.options.label_4"
        },
        {
          "value": "5",
          "label": "t:sections.apps.settings.theme.options.label_5"
        }
      ],
      "default": "primary",
      "label": "t:sections.apps.settings.theme.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.name"
    }
  ]
}
{% endschema %}
