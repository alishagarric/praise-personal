{% liquid
   assign crop_shape = section.settings.crop_shape

%}

{% style %}
    #Multicolumn-{{ section.id }} {
      --topSpacingRatio: {{section.settings.top_spacing}} / 100;
      --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
    }
 {% endstyle %}


<div id="Multicolumn-{{ section.id }}" class="multicolumn __theme-{{ section.settings.theme }} __align-{{section.settings.alignment}}">
   <div class="multicolumn__inner">

      {% if section.blocks.size > 0 %}
        {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'quote' -%}
                <div class="multicolumn__item {% if block.settings.theme %}__theme-{{ block.settings.theme }}{% endif %}">
                  <div class="multicolumn__quote p">{{ block.settings.quote }}</div>
                  {%- if section.settings.logo != blank -%}
                    <div class="multicolumn__image">
                        {% render 'next-gen-img', image: block.settings.logo %}
                    </div>
                  {%- endif -%}
                </div>
              {%- when 'image' -%}
                <div class="multicolumn__item">
                  {%- if block.settings.image != blank -%}
                    <div class="multicolumn__image __crop-{{ block.settings.crop_shape }} {% if block.settings.overlay_theme %}__theme-{{ block.settings.overlay_theme }} {% endif %}">
                        {% render 'next-gen-img', image: section.settings.image %}
                    </div>
                  {%- endif -%}
                  {% render 'heading', class: "multicolumn__heading", heading: block.settings.heading, heading_size: 'h4' %}
                  {%- if block.settings.text -%}
                    <div class="multicolum__text __article-txt" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
                  {%- endif -%}
                  {% render 'button', class: "multicolumn", button_label: block.settings.button_label, button_link: block.settings.button_link, button_color: block.settings.button_color %}
                </div>
            {%- endcase -%}
        {%- endfor -%}
      {% endif %}
   </div>
</div>

