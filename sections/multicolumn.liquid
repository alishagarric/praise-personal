{% liquid
   assign crop_shape = section.settings.crop_shape
%}

{% style %}
    #Multicolumn-{{ section.id }} {
      --topSpacingRatio: {{section.settings.top_spacing}} / 100;
      --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
      --desktopColumns: {{ section.settings.columns_desktop }};
      --mobileColumns: {{ section.settings.columns_mobile }}
    }
 {% endstyle %}


<div id="Multicolumn-{{ section.id }}" class="multicolumn __theme-{{ section.settings.theme }} __layout-{{ section.settings.layout }}">
   <multicolumn-slider class="multicolumn__inner" data-slider="{{ section.settings.layout }}">

      {% if section.blocks.size > 0 %}
        {%- for block in section.blocks -%}
            {%- case block.type -%}

              {%- when 'quote' -%}
                {% render 'quote-card' quote: block.settings.quote, alignment: section.settings.alignment, background_theme: block.settings.background_theme, card_corners: block.settings.card_corners, quotations: block.settings.quotations, details: block.settings.details, logo: block.settings.logo, class: "multicolumn__item" %}

              {%- when 'image' -%}
                {% assign image_height = block.settings.image.height | times: 1.0 %}
                {% assign image_width = block.settings.image.width | times: 1.0 %}
                {% assign image_ratio = image_height| divided_by: image_width | times: 100 %}

                <div class="multicolumn__item __align-{{section.settings.alignment}}">
                  {%- if block.settings.image != blank -%}
                    <div class="multicolumn__image __crop-{{ block.settings.crop_shape }} {% if block.settings.overlay_theme %}__theme-{{ block.settings.overlay_theme }}{% endif %} --overlayOpacity: calc({{section.settings.overlay}} / 100);" style="--imageRatio: {{ image_ratio }}%;">
                      {% render 'next-gen-img', image: block.settings.image %}
                      {% if block.settings.overlap == true %}
                        {% render 'heading', class: "multicolumn", heading: block.settings.heading, heading_size: block.settings.heading_size %}
                      {% endif %}
                    </div>
                  {%- endif -%}
                  {% if block.settings.overlap == false or block.settings.image == blank %}
                    {% render 'heading', class: "multicolumn", heading: block.settings.heading, heading_size: block.settings.heading_size %}
                  {% endif %}
                  
                  {%- if block.settings.text -%}
                    <div class="multicolum__text __article-txt" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
                  {%- endif -%}
                  {% render 'button', class: "multicolumn", button_label: block.settings.button_label, button_link: block.settings.button_link, button_color: block.settings.button_color %}
                </div>

              {%- when 'product' -%}
                {% render 'product-card', product: block.settings.product %}

              {%- when 'collection' -%}
                {% render 'collection-card', collection: block.settings.collection %}

            {%- endcase -%}
        {%- endfor -%}
      {% endif %}
    </multicolumn-slider>
</div>

