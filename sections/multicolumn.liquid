{% liquid
    assign crop_shape = section.settings.crop_shape
    assign hide_arrows_on_desktop = true
    assign hide_arrows_on_tablet = true
    assign blocks_size = 0

    for block in section.blocks
      assign blocks_size = blocks_size | plus: 1
      case block.type
        when 'products' or 'collections'
          assign blocks_size = blocks_size | plus: block.settings.products.count | plus: block.settings.collections.count | minus: 1
      endcase
    endfor

    if section.settings.layout == "slider" and blocks_size > section.settings.columns_desktop
      assign hide_arrows_on_desktop = false
    endif

    if section.settings.layout == "slider" and blocks_size > section.settings.columns_mobile
      assign hide_arrows_on_tablet = false
    endif
%}

{% style %}
    #Multicolumn-{{ section.id }} {
      --topSpacingRatio: {{section.settings.top_spacing}} / 100;
      --bottomSpacingRatio: {{section.settings.bottom_spacing}} / 100;
      --desktopColumns: {{ section.settings.columns_desktop }};
      --mobileColumns: {{ section.settings.columns_mobile }}
    }
 {% endstyle %}


<div id="Multicolumn-{{ section.id }}" class="multicolumn __theme-{{ section.settings.theme }} __layout-{{ section.settings.layout }} __align-{{section.settings.alignment}}">

  {% render 'heading', class: "multicolumn", heading: section.settings.heading, alt_heading: section.settings.alt_heading, heading_size: section.settings.heading_size %}

  {% if section.settings.description %}
    {{ section.settings.description }}
  {% endif %}

   <overflow-slider class="multicolumn__inner overflow-slider {% if hide_arrows_on_desktop %}__hide-desktop-arrows{% endif %} {% if hide_arrows_on_tablet %}__hide-tablet-arrows{% endif%}">
      <div class="overflow-slider__container multicolumn__container">

        {% if section.blocks.size > 0 %}
          {%- for block in section.blocks -%}
              {%- case block.type -%}

                {%- when 'quote' -%}
                  {% render 'quote-card' quote: block.settings.quote, alignment: block.settings.alignment, background_theme: block.settings.background_theme, card_corners: block.settings.card_corners, quotations: block.settings.quotations, details: block.settings.details, logo: block.settings.logo, class: "multicolumn__item" %}

                {%- when 'image' -%}
                  {% assign image_height = block.settings.image.height | times: 1.0 %}
                  {% assign image_width = block.settings.image.width | times: 1.0 %}
                  {% assign image_ratio = image_height| divided_by: image_width | times: 100 %}

                  <div class="multicolumn__item __align-{{block.settings.alignment}}">
                    {%- if block.settings.image != blank -%}
                      <div class="multicolumn__image __crop-{{ block.settings.crop_shape }} {% if block.settings.overlay_theme %}__theme-{{ block.settings.overlay_theme }}{% endif %} --overlayOpacity: calc({{section.settings.overlay}} / 100);" style="--imageRatio: {{ image_ratio }}%;">
                        {% render 'next-gen-img', image: block.settings.image %}
                        {% if block.settings.overlap == true %}
                          {% render 'heading', class: "multicolumn", heading: block.settings.heading, heading_size: block.settings.heading_size %}
                        {% endif %}
                      </div>
                    {%- endif -%}
                    {% if block.settings.overlap == false or block.settings.image == blank %}
                      {% render 'heading', class: "multicolumn", heading: block.settings.heading, heading_size: block.settings.heading_size %}
                    {% endif %}
                    
                    {%- if block.settings.text -%}
                      <div class="multicolumn__text __article-txt" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
                    {%- endif -%}
                    {% render 'button', class: "multicolumn", button_label: block.settings.button_label, button_link: block.settings.button_link, button_color: block.settings.button_color %}
                  </div>

                {%- when 'products' -%}
                  {% for product in block.settings.products %}
                    {% render 'product-card', product: product, class: "multicolumn__item __align" block.settings.alignment %}
                  {% endfor %}

                {%- when 'collections' -%}
                  {% for collection in block.settings.collections %}
                    {% render 'collection-card', collection: collection, class: "multicolumn__item __align-" block.settings.alignment %}
                  {% endfor %}

              {%- endcase -%}
          {%- endfor -%}
        {% endif %}
      </div>


      {% render 'overflow-slider-arrows', class: "multicolumn__arrow"%}
    </overflow-slider>
</div>

