 {% liquid
  assign section_theme = section.settings.theme
  assign top_spacing = section.settings.top_spacing
  assign bottom_spacing = section.settings.bottom_spacing
  assign alt_header = section.settings.alt_header
  assign show_date = section.settings.show_date
  assign show_author = section.settings.show_author
  assign show_description = section.settings.show_description
  assign alignment = section.settings.alignment
  assign button_label = section.settings.button_label
  assign show_assc_product = section.settings.show_assc_product
  assign crop_shape = section.settings.crop_shape
  assign section_blog = section.settings.blog
  assign article_count = section_blog.article | size

  assign initiate_flickity = false

  if article_count > 3 
    assign initiate_flickity = true
  endif
%}

{% style %}
  #Featured-blog-{{ section.id }} {
    --topSpacingRatio: {{ top_spacing }} / 100;
    --bottomSpacingRatio: {{ bottom_spacing }} / 100;
  }
{% endstyle %}

<div id="Featured-blog-{{ section.id }}" class="featured-blog __theme-{{ section_theme }} {% if initiate_flickity == false %}__no-slider{% endif %}">
  <featured-blog class="featured-blog__inner" data-slider="{{ initiate_flickity }}">
    {% render 'heading', class: "featured-blog", heading: section.settings.heading, heading_size: section.settings.heading_size %}
    
    {%- if section_blog != blank and section_blog.articles_count > 0 -%}
      <ul class="featured-blog__articles list-unstyled" role="list">
        {%- for article in section_blog.articles -%} 
          <li class="featured-blog__articles__article-container">
            {% render 'article-card', class: "featured-blog__card", crop: crop_shape, show_assc_product: show_assc_product, button_label: button_label, alignment: alignment, show_description: show_description, show_author: show_author, show_date: show_date, alt_header: alt_header, article: article %}
          </li>
        {% endfor %}
      </ul>

    {% comment %}TODO optional view all articles button {% endcomment %}
    {%- else -%}
      <ul class="featured-blog__articles list-unstyled" role="list">
        {%- for i in (1..3) -%} 
          <li class="featured-blog__articles__article-container">
            {% render 'article-card' %}
          </li>
        {% endfor %}
      </ul>
    {%- endif -%}
  </featured-blog>
</div>
    
  {% schema %}
{
  "name": "t:sections.featured-blog.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Text Content Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Lorem ipsum",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
            "value": "h2",
            "label": "X-Large"
        },
        {
            "value": "h4",
            "label": "Large"
        },
        {
            "value": "h5",
            "label": "Medium"
        },
        {
            "value": "h6",
            "label": "Small"
        }
      ],
      "default": "h5",
      "label": "Heading Size"
    },
    {
      "type": "header",
      "content": "Blog and Article Card Settings"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "t:sections.featured-blog.settings.blog.label"
    },
    {
      "type": "checkbox",
      "id": "alt_header",
      "label": "Use body font instead of header font for article title?"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show article date?"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show article excerpt?",
      "info": "Shows excerpt if it exists, content if it doesn't."
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show article author?"
    },
    {
      "type": "checkbox",
      "id": "show_assc_product",
      "label": "Show associated article product?",
      "info": "Relies on the addition of article metafields. TODO: Add link with info"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Article Button Text",
      "info": "Displays an underlined button if included, no button if not."
    },
    {
        "type":"radio",
        "id":"alignment",
        "label":"Alignment",
        "options":[
          {
              "value":"left",
              "label":"Left"
          },
          {
              "value":"center",
              "label":"Center"
          },
          {
              "value":"right",
              "label":"Right"
          }
        ],
        "default":"left"
    },
    {
      "type": "select",
      "id": "crop_shape",
      "options": [
        {
          "value": "default",
          "label": "No Crop (Default)"
        },
        {
          "value": "circle",
          "label": "Circle"
        },
        {
          "value": "rounded-square",
          "label": "Rounded Square"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "landscape",
          "label": "Landscape"
        }
      ],
      "default": "default",
      "label": "Product Image Crop Shape"
    },
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "select",
      "id": "theme",
      "options": [
        {
          "value": "primary",
          "label": "Primary Theme"
        },
        {
          "value": "2",
          "label": "2nd Theme"
        },
        {
          "value": "3",
          "label": "3rd Theme"
        },
        {
          "value": "4",
          "label": "4th Theme"
        },
        {
          "value": "5",
          "label": "5th Theme"
        }
      ],
      "default": "primary",
      "label": "Theme"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Top Spacing",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Bottom Spacing",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-blog.presets.name",
      "settings": {
        "blog": "From the Blog"
      }
    }
  ]
}
{% endschema %}

