{% comment %}
  This is a version of image banner that contains content specific to a blog page
{% endcomment %}

{% capture section_id %}Main-blog-banner-{{ section.id }}{% endcapture %}

{% capture text_content %}
  {% render 'heading',
    class: 'image-banner',
    heading: blog.title,
    heading_tag: "h1",
    heading_size: section.settings.heading_size,
    alt_heading: section.settings.alt_heading
  %}
{% endcapture %}


{% render 'image-banner' 
  top_spacing: section.settings.top_spacing,
  bottom_spacing: section.settings.bottom_spacing,
  top_internal_spacing: section.settings.top_internal_spacing,
  bottom_internal_spacing: section.settings.bottom_internal_spacing,
  section_id: section_id,
  theme: section.settings.theme,
  alignment: section.settings.alignment,
  text_content: text_content,
%}


{% schema %}
{
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "X-Large"
        },
        {
          "value": "h4",
          "label": "Large"
        },
        {
          "value": "h5",
          "label": "Medium"
        },
        {
          "value": "h6",
          "label": "Small"
        }
      ],
      "default": "h4",
      "label": "Heading Size"
    },
    {
      "type": "checkbox",
      "id": "alt_heading",
      "label": "Use body font instead of heading font for heading?"
    },
    {
      "type": "radio",
      "id": "alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "overlay",
      "label": "Overlay Opacity",
      "info": "If above 0%, an overlay will be added on top of the image to create contrast behind the text.",
      "min": 0,
      "max": 70,
      "step": 10,
      "unit": "%",
      "default": 50
    },
    {
      "type": "header",
      "content": "Section"
    },
    {
      "type": "select",
      "id": "theme",
      "options": [
        {
          "value": "primary",
          "label": "Primary Theme"
        },
        {
          "value": "2",
          "label": "2nd Theme"
        },
        {
          "value": "3",
          "label": "3rd Theme"
        },
        {
          "value": "4",
          "label": "4th Theme"
        },
        {
          "value": "5",
          "label": "5th Theme"
        }
      ],
      "default": "primary",
      "label": "Theme"
    },
    {
      "type": "range",
      "id": "top_internal_spacing",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "%",
      "label": "Top Text Content Spacing",
      "default": 100
    },
    {
      "type": "range",
      "id": "bottom_internal_spacing",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "%",
      "label": "Bottom Text Content Spacing",
      "default": 100
    },
    {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Top Section Spacing",
      "default": 0
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Bottom Section Spacing",
      "default": 0
    }
  ]
}
{% endschema %}
