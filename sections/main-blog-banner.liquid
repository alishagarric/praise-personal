{% comment %}
  This is a version of image banner that contains content specific to a blog page
{% endcomment %}
{{ 'image-banner.css' | asset_url | stylesheet_tag }}

{% capture section_id %}Main-blog-banner-{{ section.id }}{% endcapture %}

{% capture text_content %}
  {% render 'heading',
    class: 'image-banner',
    heading: blog.title,
    heading_tag: "h1",
    heading_size: section.settings.heading_size,
    alt_heading: section.settings.alt_heading
  %}
{% endcapture %}

{%
  render 'image-banner'
  top_spacing: section.settings.top_spacing,
  bottom_spacing: section.settings.bottom_spacing,
  top_internal_spacing: 0,
  bottom_internal_spacing: 0,
  section_id: section_id,
  theme: section.settings.theme,
  alignment: section.settings.alignment,
  text_content: text_content,
  hero: true,
%}

{% schema %}
{
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.main-blog-banner.settings.header.content"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.main-blog-banner.settings.heading_size.options.label_1"
        },
        {
          "value": "h4",
          "label": "t:sections.main-blog-banner.settings.heading_size.options.label_2"
        },
        {
          "value": "h5",
          "label": "t:sections.main-blog-banner.settings.heading_size.options.label_3"
        },
        {
          "value": "h6",
          "label": "t:sections.main-blog-banner.settings.heading_size.options.label_4"
        }
      ],
      "default": "h4",
      "label": "t:sections.main-blog-banner.settings.heading_size.label"
    },
    {
      "type": "checkbox",
      "id": "alt_heading",
      "label": "t:sections.main-blog-banner.settings.alt_heading.label"
    },
    {
      "type": "radio",
      "id": "alignment",
      "label": "t:sections.main-blog-banner.settings.alignment.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.main-blog-banner.settings.alignment.options.label_1"
        },
        {
          "value": "center",
          "label": "t:sections.main-blog-banner.settings.alignment.options.label_2"
        },
        {
          "value": "right",
          "label": "t:sections.main-blog-banner.settings.alignment.options.label_3"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "t:sections.main-blog-banner.settings.header_2.content"
    },
    {
      "type": "select",
      "id": "theme",
      "options": [
        {
          "value": "primary",
          "label": "t:sections.main-blog-banner.settings.theme.options.label_1"
        },
        {
          "value": "2",
          "label": "t:sections.main-blog-banner.settings.theme.options.label_2"
        },
        {
          "value": "3",
          "label": "t:sections.main-blog-banner.settings.theme.options.label_3"
        },
        {
          "value": "4",
          "label": "t:sections.main-blog-banner.settings.theme.options.label_4"
        },
        {
          "value": "5",
          "label": "t:sections.main-blog-banner.settings.theme.options.label_5"
        }
      ],
      "default": "primary",
      "label": "t:sections.main-blog-banner.settings.theme.label"
    },
    {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "t:sections.main-blog-banner.settings.top_spacing.label",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "t:sections.main-blog-banner.settings.bottom_spacing.label",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "t:sections.main-blog-banner.presets.name"
    }
  ]
}
{% endschema %}
