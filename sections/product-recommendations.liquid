{% comment %} TODO: learn what the heck the benefits are of media and onload attributes below
  <link rel="stylesheet" href="{{ 'component-card.css' | asset_url }}" media="print" onload="this.media='all'">
{% endcomment %}

<script src="{{ 'product-recommendations.js' | asset_url }}" defer="defer"></script>

{% assign products_to_show = 4 %}

<div class="product-recommendations">
  <product-recommendations data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ products_to_show }}">
    {% if recommendations.performed and recommendations.products_count > 0 %}

      <h2 class="product-recommendations__heading">{{ section.settings.heading | escape }}</h2>

      <overflow-slider class="overflow-slider {% if recommendations.products_count < 5 %}__hide-desktop-arrows{% endif %} {% if recommendations.products_count < 3 %}__hide-tablet-arrows{% endif%}">

        <ul class="product-recommendations__container overflow-slider__container" role="list">
          {% for recommendation in recommendations.products %}
            <li>
                {% render 'product-card', product: recommendation %}
            </li>
          {% endfor %}
        </ul>

        {% comment %} Slider arrows (required for slider) {% endcomment %}
        {% render 'overflow-slider-arrows', class: "multicolumn__arrow" %}

      </overflow-slider>
    {% endif %}
  </product-recommendations>
</div>

{% schema %}
{
  "name": "t:sections.product-recommendations.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.product-recommendations.settings.paragraph.content"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "You may also like",
      "label": "t:sections.product-recommendations.settings.heading.label"
    }
  ]
}
{% endschema %}
