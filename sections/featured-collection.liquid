 {% liquid
  assign featured_collection = section.settings.collection
  assign collection_text_content = section.settings.collection_text_content
  assign collection_heading = section.settings.heading
  assign collection_text = section.settings.text
  assign crop_shape = section.settings.crop_shape
  assign section_theme = section.settings.theme
  assign top_spacing = section.settings.top_spacing
  assign bottom_spacing = section.settings.bottom_spacing
  assign show_phrase = section.settings.show_phrase
  assign theme_slider = section.settings.theme_slider
  assign price_pos = section.settings.price
  assign product_text_alignment = section.settings.product_text_alignment
  assign alt_heading  = section.settings.alt_heading
  assign alt_title  = section.settings.alt_title
  assign show_description = section.settings.show_description
  assign quick_add = section.settings.quick_add
  assign show_bg_color = section.settings.show_bg_color

  assign products_count = featured_collection.products | size
  assign initiate_flickity = false
  
  if products_count > 3
    assign initiate_flickity = true
  endif

  if collection_text_content
    assign section_heading = featured_collection.title
    assign section_text = featured_collection.description
  else
    if collection_heading
        assign section_heading = collection_heading
    endif
      if collection_text
      assign section_text = collection_text
    endif
  endif
%}

 {% style %}
    #Featured-collection-{{ section.id }} {
      --topSpacingRatio: {{ top_spacing }} / 100;
      --bottomSpacingRatio: {{ bottom_spacing }} / 100;
    }
 {% endstyle %}

<div 
  id="Featured-collection-{{ section.id }}" 
  class="featured-collection __theme-{{section_theme}} {% if theme_slider %}__theme-slider {% endif %} {% if initiate_flickity == false %}__no-slider {% endif %}"  
>
  {% comment %} Text Content {% endcomment %}
  {% if section_heading != blank or section_text != blank %}
    <div class="featured-collection__text">
        {% if section_heading %}
          <h2 class="featured-collection__text__heading h4 {% if alt_heading %}alt{% endif %}">{{ section_heading }}</h2>
        {% endif %}
        {% if section_text %}
          <div class="featured-collection__text__desc">
            {{ section_text }}
          </div>
        {% endif %}
    </div>
  {% endif %}

  <featured-collection 
    class="featured-collection__container"
    data-slider="{% if initiate_flickity %}true{% else %}false{% endif %}" 
    data-custom-controls="{{ theme_slider }}"
  >

    {% unless featured_collection == blank %}
      {% comment %}
        Main Flickity slider that is only initiated when there are enough
        products in the collection. If theme_slider is toggled on, controls
        (arrows and dots) are not added to this slider, but if it is, then 
        a whole new controls Flickity slider is created below
      {% endcomment %}
      <div class="featured-collection__cards" style="--featuredCollectionThemedTextColor: {{ featured_collection.products[0].metafields.custom.text_color }}">
        {% for product in featured_collection.products %}
          {% render 'product-card' product: product, show_bg_color: show_bg_color, quick_add: quick_add, crop: crop_shape, show_phrase: show_phrase, alignment: product_text_alignment, show_description: show_description, price_position: price_pos, alt_heading: alt_title, img_width: 930, img_widths: "930, 650, 400", img_sizes: "(max-width: 676px) 75vw, (max-width: 1024px) 33vw, 25vw", class: "featured-collection__cards__card" %}
        {% endfor %}
      </div>

      {% if initiate_flickity and theme_slider %}
        {% comment %}
          Controls Flickity slider that contains only themed dots and the
          arrows. Only used when theme_slider is toggled on
        {% endcomment %}
        <div class="featured-collection__controls flickity-controls">
          {% for product in featured_collection.products %}
            <div class="featured-collection__controls__control" style="--productColor: {% if theme_slider %}{{product.metafields.custom.color }}{% else %}var(--color-text) {% endif %};">
              <span class="visually-hidden">{{ product.title }}</span>
            </div>
          {% endfor %}
        </div>

      {% comment %}
        Background Flickity slider that contains only background colors. 
        Only used when theme_slider is toggled on
      {% endcomment %}
        <div class="featured-collection__background-color">
          {% for product in featured_collection.products %}
            <div class="featured-collection__background-color__item" style="background-color: {{product.metafields.custom.color }};"></div>
          {% endfor %}
        </div>
      {% endif %}
    {% else %}

      {% comment %}
        Placeholder cards that display before a collection is chosen
      {% endcomment %}
      <div class="featured-collection__cards">
        {% for i in (1..3) %}
          {% render 'product-card', price_position: 'bottom', class: "featured-collection__cards__card" %}
        {% endfor %}
      </div>
    {% endunless %}
  </featured-collection>

</div>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "checkbox",
      "id": "theme_slider",
      "label": "Theme collection slider with product colors",
      "info": "Only applies when there's enough products in the collection to initiate a slider. Relies on the addition of product metafields. TODO: Add link with info"
    },
    {
      "type": "header",
      "content": "Product Cards"
    },
    {
      "type": "checkbox",
      "id": "show_phrase",
      "label": "Show product phrase"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show product description"
    },
    {
      "type": "checkbox",
      "id": "quick_add",
      "label": "Enable quick add",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bg_color",
      "label": "Show background color",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "alt_title",
      "label": "Use body font instead of heading font for product title"
    },
    {
      "type": "select", 
      "id": "product_text_alignment",
      "options": [
        {
          "value": "default",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "default",
      "label": "Product Text Alignment"
    },
    {
      "type": "select",
      "id": "price",
      "options": [
        {
          "value": "default",
          "label": "Right of Title"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "not-visible",
          "label": "Not Visible"
        }
      ],
      "default": "default",
      "label": "Price Position"
    },
    {
      "type": "select",
      "id": "crop_shape",
      "options": [
        {
          "value": "default",
          "label": "No Crop"
        },
        {
          "value": "square",
          "label": "Square"
        },
        {
          "value": "rounded-square",
          "label": "Rounded Square"
        },
        {
          "value": "circle",
          "label": "Circle"
        },
        {
          "value": "portrait",
          "label": "Portrait"
        },
        {
          "value": "rounded-portrait",
          "label": "Rounded Portrait"
        },
        {
          "value": "semicircle-portrait",
          "label": "Semicircle Portrait"
        },
        {
          "value": "landscape",
          "label": "Landscape"
        },
        {
          "value": "rounded-landscape",
          "label": "Rounded Landscape"
        },
        {
          "value": "semicircle-landscape",
          "label": "Semicircle Landscape"
        },
        {
          "value": "arch",
          "label": "Semicircle Arch"
        }
      ],
      "default": "default",
      "label": "Product Image Crop Shape"
    },
    {
      "type": "header",
      "content": "Text Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem Ipsum"
    },
    {
      "type": "checkbox",
      "id": "alt_heading",
      "label": "Use body font instead of heading font for heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip.</p>",
      "label": "Description"
    },
    {
      "type": "checkbox",
      "id": "collection_text_content",
      "label": "Use collection title and description for text content",
      "info": "If chosen, the collection title and description will replace the heading and description added above, if any."
    },
    {
      "type": "header",
      "content": "Section"
    },
    {
      "type": "select",
      "id": "theme",
      "options": [
        {
          "value": "primary",
          "label": "Primary Theme"
        },
        {
          "value": "2",
          "label": "2nd Theme"
        },
        {
          "value": "3",
          "label": "3rd Theme"
        },
        {
          "value": "4",
          "label": "4th Theme"
        },
        {
          "value": "5",
          "label": "5th Theme"
        }
      ],
      "default": "primary",
      "label": "Theme"
    },
    {
      "type": "range",
      "id": "top_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Top Spacing",
      "default": 50
    },
    {
      "type": "range",
      "id": "bottom_spacing",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Bottom Spacing",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
